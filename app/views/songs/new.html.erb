<h1>"My song"</h1>
 
<%= form_for(@song) do |f| %>
  <label>"My song name"</label><br>
  <%= f.text_field :name %><br>
  <label>"My artist number"</label><br>
  <%= f.number_field :artist_id %><br>
  <label>"My genre number"</label><br>
  <%= f.number_field :genre_id %><br>
  <%= f.submit %>
<% end %>